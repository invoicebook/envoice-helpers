{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "outDir": "./dist",
    "target": "ES5",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}